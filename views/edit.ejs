<%- include('./partials/header.ejs') %>
<div class="container">
<div class="row">
<div class="col-4">
  <a href="/members">Lumin8</a>
</div>
<div class="col-8">
    <a href="/members/new">Add a New Member</a>
<form action="" method="POST">
<input type="search" id="search" name="search" placeholder="search">
</form>
<form action="/members/<%=member.id%>?_method=PUT" method="POST">
<table>
<tr>
<th>
  <label for="img">Image:</label>
  <input id="img" type="text" name="img" placeholder="Upload your image here" width="150" height="200 ">
</th>
<th>
  <label for="name">Name:</label>
    <input id="name" type="text" name="name" placeholder="Enter your full name">
    <label for="title">Title:</label>
    <input id="title" type="text" name="title" placeholder="Write your title">
    <label for="location">Location:</label>
    <input id="location" type="text" name="location" placeholder="City, State, Country">
    <label for="bio">Bio:</label>
    <input id="bio" type="textarea" name="bio" placeholder="Write your bio">
</th>
<th>
  <label for="accomplishments">Accomplishments:</label>
  <input id="accomplishments" type="text" name="accomplishments" placeholder="Use a comma to seperate each accomplishment">
  <input type="submit" value="Save">
</th>
</tr>
</table>
</form>
</div>
</div>
</div>
<%- include('./partials/footer.ejs')%>
