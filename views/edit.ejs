<%- include('./partials/header.ejs') %>
<div class="col-10 pt-4">
    <a href="/members/new"><h5 style="text-align:right;">Add a New Member</h5></a>
<form action="" method="POST">
  <input type="search" id="search" name="search" class="form-control" placeholder="Search" aria-label="search">
</form>

<h2>Edit Your Profile</h2>

<form action="/members/<%=member.id%>?_method=PUT" method="POST">
<div class="container pt-5">
<div class="row">
<div class="col">
  <div class="form-group">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" value="<%=member.name%>" class="form-control">
  </div>
  <div class="form-group">
    <label for="img">Image:</label>
    <input id="img" type="text" name="img" value="<%=member.img%>" class="form-control">
  </div>
    <div class="form-group">
      <label for="title">Title:</label>
      <input id="title" type="text" name="title" value="<%=member.title%>" class="form-control">
    </div>
    <div class="form-group">
      <label for="bio">Bio:</label>
      <textarea rows="8" cols="40" id="bio" type="textarea" name="bio" class="form-control"><%=member.bio%></textarea>
    </div>

    <div class="form-group">
    <br/><span>Contact Info</span><br/>
        <label for="twitter">Twitter:</label>
            <input id="twitter" type="text" name="twitter" value="<%=member.contact.twitter%>" class="form-control">
        <label for="instagram">Instagram:</label>
            <input id="instagram" type="text" name="instagram" value="<%=member.contact.instagram%>" class="form-control">
        <label for="linkedin">Linkedin:</label>
          <input id="linkedin" type="text" name="linkedin" value="<%=member.contact.linkedin%>" class="form-control">
        <label for="website">Website:</label>
          <input id="website" type="text" name="website" value="<%=member.contact.website%>" class="form-control">
    </div>

    <div class="form-group">
      <br/><label for="location">Location:</label>
      <input id="location" type="text" name="location" value="<%=member.location%>" class="form-control">
    </div>
    <div class="form-group">
      <label for="accomplishments">Accomplishments:</label>
      <textarea rows="8" cols="40" id="accomplishments" type="text" name="accomplishments" class="form-control"> <%=member.accomplishments.join(', ')%> </textarea>
    </div>
    <div class="form-group pb-3">
      <label for="tags">Tags:</label>
      <input id="tags" type="text" name="tags" value="<%=member.tags.join(', ')%>" class="form-control">
    </div>
    <input type="submit" value="Save">
</div>
</div>
</div>
</form>
</div>
</div>
</div>
<%- include('./partials/footer.ejs')%>
